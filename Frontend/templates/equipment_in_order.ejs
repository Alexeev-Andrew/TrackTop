<div class="myOrder">
    <p class="centerAlign">
        <span class="order-title"><%= equipment.title%> </span>
    </p>
    <div class="image-control">
        <div style="display: flex; flex-direction: column;">

            <div class="price-box">
                <div class="minus btn btn-xs btn-danger btn-circle">
                    <i class="glyphicon glyphicon-minus"></i>
                </div>
                <span class="label order-count" style="color:black;"><span class=""
                        style="display:none">x</span><%= equipment.quantity %></span>
                <div class="plus btn btn-xs btn-success btn-circle">
                    <i class="glyphicon glyphicon-plus "></i>
                </div>
                <div class="removeButton count-clear btn btn-xs btn-default">
                    Видалити
                </div>
            </div>
            <div class="orderCharacteristics">
                <span>Ціна: </span>
                <span class="price"><%=equipment.price_uah %> грн</span>
            </div>
        </div>
        <img class="imgInOrder" src="/images/equipments/<%=equipment.icon%>">
    </div>


</div>