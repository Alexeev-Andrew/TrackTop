<div id="messageModal" class="modal">

    <form class="modal-content" >
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Написати повідомлення</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="container">
            <hr>

            <label for="name"><b>Ім'я</b></label>
            <input type="text" placeholder="Ваше ім'я" name="name" required>

            <label for="phone"><b>Номер телефону</b></label>
            <input type="text" placeholder="Номер телефону" name="phone" required>

            <label for="aim"><b>Тема</b></label>
            <input type="text" placeholder="Тема повідомлення" name="aim" required>

            <div class="form-group">
                <label for="message">Текст повідомлення</label>
                <textarea id="message" class="form-control" required name="message" rows="4"></textarea>
            </div>


            <div class="clearfix">
                <button id ="messageModal" class="signup" onclick="sendMessage_My();">Зареєструватись</button>
            </div>
        </div>
    </form>
</div>